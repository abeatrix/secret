<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <title>Secrets...</title>
</head>
<Style>
    #deleteButton {
        text-align: right;
        display: inline;
    }
    .secret {
        padding: 20px;
    }
</Style>
<style>
    #signupForm {
    margin: 10% auto;
    width: 80%;
    border: 3px solid blue;
    padding: 10px;
}
</style>
<body>
    <%- include('../partials/nav') %>

    <div id='signupForm'>
        <h3>an anonymous message board...</h3>
        <ul>
            <% secrets.forEach((user, i) => { %>
                <li class='secret'>
                    <a href='/secret/<%= secrets[i]._id %>'> <%= secrets[i].context %> </a>
                    <form id='deleteButton' action ='/secret/<%=secrets[i]._id %>?_method=DELETE' method='POST'>
                        <div class="text-right"><button type="submit" class="btn btn-primary mb-2">DELETE</button></div>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
